<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/fondo_principal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView" />

    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageButton
            android:layout_width="0dp"
            android:layout_weight=".33"

            android:layout_height="60dp"
            android:onClick="dispatchTakePictureIntent"
            android:text="@string/button_send"
            android:id="@+id/button2"
            android:background="#09162E"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_camera"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="60dp"
            android:onClick="botonIrColeccionFlores"
            android:scaleType="fitCenter"
            android:id="@+id/button"
            android:background="#09162E"
            android:padding="10dp"
            android:src="@drawable/icon_mis_flores"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="60dp"
            android:onClick="botonIrGaleria"
            android:scaleType="fitCenter"
            android:id="@+id/button_galeria"
            android:background="#09162E"
            android:padding="10dp"
            android:src="@drawable/icon_galeria"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2" />


    </LinearLayout>


</RelativeLayout>
