<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/flor_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/girasol"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/flor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/flor_image"
        android:layout_toEndOf="@+id/flor_image"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/flor_name_cientifico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@+id/flor_name"
        android:layout_toRightOf="@+id/flor_image"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>